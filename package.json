{
	"name": "raythis-plus",
	"displayName": "RayThis+",
	"description": "Based on the RayThis Extension from ridarf",
	"icon": "256x256.png",
	"publisher": "Paskie",
	"version": "1.2.1",
	"repository": {
		"url": "https://github.com/Paskie0/raythis-plus"
	},
	"engines": {
		"vscode": "^1.53.0"
	},
	"categories": [
		"Snippets",
		"Visualization",
		"Other"
	],
	"keywords": [
		"ray.so",
		"ray",
		"snippets",
		"code snippets"
	],
	"activationEvents": [
		"onCommand:ray-this.publishSelectedSnippet"
	],
	"main": "./extension.js",
	"contributes": {
		"commands": [
			{
				"command": "ray-this.publishSelectedSnippet",
				"title": "RayThis: Upload Snippet"
			}
		],
		"configuration": {
			"title": "RayThis",
			"properties": {
				"ray-this.background": {
					"type": "string",
					"enum": [
						"true",
						"false"
					],
					"default": "true",
					"description": "Transparent background"
				},
				"ray-this.darkMode": {
					"type": "string",
					"enum": [
						"true",
						"false"
					],
					"default": "true"
				},
				"ray-this.padding": {
					"type": "string",
					"enum": [
						"16",
						"32",
						"64",
						"128"
					],
					"default": "32",
					"description": "Set a default padding"
				},
				"ray-this.theme": {
					"type": "string",
					"enum": [
						"breeze",
						"candy",
						"crimson",
						"falcon",
						"meadow",
						"midnight",
						"mono",
						"raindrop",
						"sunset"
					],
					"default": "breeze",
					"description": "Set a default theme"
				}
			}
		}
	},
	"scripts": {
		"lint": "eslint .",
		"pretest": "npm run lint",
		"test": "node ./test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.4",
		"@types/node": "^12.11.7",
		"@types/vscode": "^1.53.0",
		"eslint": "^7.19.0",
		"glob": "^7.1.6",
		"mocha": "^10.4.0",
		"typescript": "^4.1.3",
		"vscode-test": "^1.5.0"
	},
	"dependencies": {
		"open": "^7.4.2"
	}
}
